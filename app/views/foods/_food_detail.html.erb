<h3><%= food.name %></h3>
<h5><%= @food.average_rating %> / 5</h5>
<span id="average_rating"></span>
<div class="card">
  <div class="card-image">
    <%= link_to food do %>
        <%= image_tag food.image_url, class: 'background-blur' %>
    <% end %>
  </div>
  <div class="card-content">
    <p>
      <%= food.description %>
    </p>
  </div>
  <div class="card-action">
    <%= food.price %>
    <%= link_to 'add to orders', orders_add_path(id: food.id),
                remote: true, method: :post, class: 'right', style: 'margin-right: 0' %>
  </div>
</div>

<script>
  $('#average_rating').raty({
    readOnly: true,
    score: <%= @food.average_rating %>
  });
</script>