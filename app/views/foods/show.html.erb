<div class="row">
  <div class="col m7">
    <h3><%= @food.name %></h3>
    <span id="average_rating"></span>
    <div class="card">
      <div class="card-image">
        <%= link_to @food do %>
            <%= image_tag @food.image_url, class: 'background-blur' %>
        <% end %>
      </div>
      <div class="card-content">
        <p>
          <%= @food.description %>
        </p>
      </div>
      <div class="card-action">
        <%= @food.price %>
        <a href="#" class="right" style="margin-right: 0">Add to orders</a>
      </div>
    </div>
  </div>

  <!-- Reviews -->
  <div class="col m4 offset-m1">
    <h3>Reviews</h3>
    <%= render 'reviews/form' %>
    <hr id="hr-divider">
    <%= render 'reviews/index', reviews: @reviews %>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('input#input_text, textarea#textarea1').characterCounter();
  });

  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @food.average_rating %>
  });
</script>